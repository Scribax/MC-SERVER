# ===================================================================
# CONFIGURACIÓN VPS - MINECRAFT SERVER
# Renombra este archivo a 'vps_config.env' y completa los datos
# ===================================================================

# Información del VPS
VPS_HOST=tu-servidor.com
VPS_USER=minecraft
VPS_PORT=22
VPS_PATH=/home/minecraft/minecraft-server

# Dominio (opcional)
DOMAIN_NAME=servidor.tudominio.com

# Configuración del servidor
SERVER_RAM=6G
MAX_PLAYERS=20
SERVER_PORT=25565

# Configuraciones adicionales (opcional)
AUTO_START=true
BACKUP_RETENTION=10
FIREWALL_CONFIG=true
